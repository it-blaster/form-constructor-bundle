<tfoot>
    <tr>
        <td colspan="4" class="sonata-ba-list-field sonata-ba-list-field-text text-right">
            {% if not object.fcFields | length %}
                {{ 'fc.message.admin.no_fields' | trans({}, 'FenrizbesFormConstructorBundle') }}
            {% endif %}
        </td>
        <td>
            <a
                href="#fc_modal"
                data-toggle="modal"
                data-title="{{ 'fc.title.admin.field.modal.create' | trans({}, 'FenrizbesFormConstructorBundle') }}"
                data-url="{{ admin.generateUrl('select_widget', { id: object.id }) }}"
                data-scope="create"
                class="btn btn-sm btn-default create_link"
                title="{{ 'fc.title.admin.new_field' | trans({}, 'FenrizbesFormConstructorBundle') }}"
            >
                <i class="glyphicon glyphicon-plus-sign"></i>
                {{ 'fc.title.admin.new_field' | trans({}, 'FenrizbesFormConstructorBundle') }}
            </a>
        </td>
    </tr>
</tfoot>