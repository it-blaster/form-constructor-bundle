{% extends 'FenrizbesFormConstructorBundle:SonataAdmin/FcFormBehavior/ActionInfo:default.html.twig' %}

{% block info %}
    {% set class = 'success' %}
    {% set label = fc_item('action', action.action).action(action.params.action) %}
    {{ block('item') }}

    {% set class = 'success' %}
    {% set label = 'fc.label.behavior.action_action.validator' %}
    {{ block('item') }}

    {% set class = 'primary' %}
    {% for validator_name in action.params.validator %}
        {% set label = validator_name | fc_constraint %}
        {{ block('item') }}
    {% endfor %}

    {% set class = 'success' %}
    {% set label = 'fc.label.behavior.action_action.for' %}
    {{ block('item') }}

    {% set class = 'primary' %}
    {% set label = object.fieldByName(action.params.field) %}
    {{ block('item') }}
{% endblock %}